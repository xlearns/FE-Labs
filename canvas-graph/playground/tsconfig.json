{
	"extends": "@vue/tsconfig/tsconfig.web.json",
	// "include": ["src", "src/**/.ts","src/**/.vue","vite.config.ts"],
    "exclude": ["node_modules", "dist", "**/*.js", "build"],
	"compilerOptions": {
		"allowJs": true,
		"module": "ES6",
		"target": "ES2018",
		"noImplicitAny": false,
		"declaration": true,
		"sourceMap": true,
		"lib": ["ES2018", "DOM", "DOM.Iterable"],
		"baseUrl": ".",
		"paths": {
			"@/*":["src/*"]
		}
	}
}
